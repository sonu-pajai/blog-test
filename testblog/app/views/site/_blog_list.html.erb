 <% @blogs.each do|b| %>   
  <div class="row">
    <div class="col-sm-4">
      <a href="#" class=""><img src="<%=b.image.url rescue '' %>" class="img-responsive" ></a>
    </div>
    <div class="col-sm-8">
      <h3 class="title"><%=b.title.capitalize rescue ''%></h3>
      <p class="text-muted"><span class="glyphicon glyphicon-lock"></span> Available Exclusively for Premium Members</p>
      <p><%=b.short_description.capitalize rescue ''%></p>  
      <p><a href="<%=url_blog(b)%>" class="btn btn-primary" style="color: #fff">Read More...</a></p>        
      <p align="right" class="text-muted" style="color: #2ca0d6;">Published On <%= b.published_on %></p>          
    </div>
  </div>
<%end%>