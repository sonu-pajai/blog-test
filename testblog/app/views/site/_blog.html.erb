<script>
  jQuery(document).ready(function($){  
  	 $(".sort_by").change(function(){
          var sort_by = $(".sort_by").val();
          $.ajax({
              type:"post",
              cache:false,
              url: "/filter-blog",
              data:{sort_by:sort_by},    // multiple data sent using ajax
              success: function (html) {
                
              }
          });
      });
  	});
</script>
<div class="col-md-12">
   	<div class="row">
        <div class="col-sm-12 ">   
        <img src="/images/Blog-banner.jpg" class="img-responsive">
        </div>
    </div>   
    <br/>
    <div class="row">          
          <div class="col-md-4 col-sm-4"></div>
          <div class="col-md-8 col-sm-8">
          	<div class="col-md-8 col-sm-8" style="padding-left:0px;">
          		<form method="post" action="/search-blog">
          		<div class="input-group">
			        <input type="text" class="form-control" placeholder="Search" name="searchtext" id="searchtext" value=<%=@searchtext rescue ''%>>
			        <div class="input-group-btn">
			          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>
			          </button>
			        </div>
			    </div>
			    </form>
          	</div>
          	<div class="col-md-4 col-sm-4" style="padding-left:0px;">
          		<select class="form-control sort_by" name="sort_by">
	              <option value="popular">Popular</option>
	              <option value="recent">Recently Added</option>
	              <option value="nameasc">A-Z</option>
	              <option value="namedesc">Z-A</option>
	            </select>
          	</div>     
          </div>          
        </div>       
        <div class="result"> 
	   		<%= render 'blog_list' %>
	    </div>
       <div class="row">
	        <div class="col-sm-12">
	   			 <%= will_paginate @blogs %>
	    	</div>
    	</div>
    	
	    <div class="row">
    	   <div class="col-sm-12">
    	   	  <% if @blogs.count==0 %>  
    	   	  	<h4>No Blog Found</h4>
    	   	  <%end%> 
    	   </div>
	   	</div>
    <hr>     
</div>